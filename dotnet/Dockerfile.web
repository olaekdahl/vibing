# Build stage for Blazor WebAssembly
FROM mcr.microsoft.com/dotnet/sdk:9.0 AS build
WORKDIR /src

# Copy csproj and restore
COPY src/ProductScanner.Web/ProductScanner.Web.csproj ./ProductScanner.Web/
RUN dotnet restore ProductScanner.Web/ProductScanner.Web.csproj

# Copy source and build
COPY src/ProductScanner.Web/ ./ProductScanner.Web/
WORKDIR /src/ProductScanner.Web
RUN dotnet publish -c Release -o /app/publish

# Runtime stage - using nginx to serve static files
FROM nginx:alpine AS runtime

# Copy published Blazor WebAssembly files
COPY --from=build /app/publish/wwwroot /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
